{{! @glint-nocheck }}
<dialog
  id='modal'
  {{on 'cancel' this.handleModalCancel}}
  data-modal='{{this.activeModal.type}}'
>
  {{#if this.activeModal.type}}
    {{component
      (concat 'modal/types/' this.activeModal.type)
      options=this.activeModal.options
    }}
  {{/if}}
</dialog>
<button
  id='modal-backdrop'
  type='button'
  {{on 'click' this.handleModalCancel}}
  aria-hidden='true'
/>